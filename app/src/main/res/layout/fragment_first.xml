<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">


    <View
        android:id="@+id/BackGroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="-145dp"
        tools:layout_editor_absoluteY="-141dp" />

    <View
        android:id="@+id/boxed_water"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toTopOf="@+id/bg"
        android:background="@drawable/image" />


    <View
        android:id="@+id/boxed_wat2"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="336dp"
        android:background="@drawable/replace_ima"
        app:layout_constraintBottom_toTopOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@+id/BackGroud"
        app:layout_constraintVertical_bias="0.38"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/wherever_yo"
        android:layout_width="276dp"
        android:layout_height="64dp"
        android:fontFamily="@font/baloo_chettan"
        android:text="@string/wherever_yo"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/wherever_yo"
        app:layout_constraintBottom_toBottomOf="@+id/boxed_water"
        app:layout_constraintEnd_toEndOf="@+id/boxed_wat2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/boxed_wat2"
        app:layout_constraintTop_toTopOf="@+id/boxed_wat2"
        app:layout_constraintVertical_bias="0.891" />

    <TextView
        android:id="@+id/there_is_no"
        android:layout_width="257dp"
        android:layout_height="18dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/baloo_chettan"
        android:text="@string/there_is_no"
        android:textAppearance="@style/there_is_no"
        android:textColor="#757575"
        app:layout_constraintBottom_toTopOf="@+id/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wherever_yo"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/base"
        android:layout_width="65dp"
        android:layout_height="5dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/base"
        app:layout_constraintBottom_toTopOf="@+id/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/there_is_no"
        app:layout_constraintVertical_bias="0.666" />

    <View
        android:id="@+id/bg"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="@+id/BackGroud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/get_started"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:text="@string/get_started"
        android:textAppearance="@style/get_started"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@+id/bg"
        app:layout_constraintVertical_bias="0.531" />


</android.support.constraint.ConstraintLayout>